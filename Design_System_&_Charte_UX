/* JavaScript requis pour calculer l'angle selon position souris */
.tilt-card:hover {
  transform: perspective(1000px) 
              rotateX(var(--rotate-x)) 
              rotateY(var(--rotate-y))
              scale(1.02);
}

.tilt-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  opacity: 0;
  transition: opacity 0.2s ease;
  border-radius: inherit;
}

