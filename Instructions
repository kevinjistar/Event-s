  background: #2D3436;
  color: #FFFFFF;
  padding: 12px 20px;
  border-radius: 12px;
  box-shadow: 0px 4px 16px rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  gap: 12px;
  z-index: 9999;
  
  /* Animation entrÃ©e */
  animation: toast-in 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes toast-in {
  0% {
    transform: translateX(-50%) translateY(-100px);
    opacity: 0;
  }
  100% {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
  }
}

/* Variants */
.toast.success { background: #00B894; }
.toast.error { background: #FF7675; }
.toast.warning { background: #FDCB6E; color: #2D3436; }
```

